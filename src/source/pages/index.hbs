<body style="opacity: 0">

    <slides class="layout-widescreen">

        <slide class="logoslide nobackground">
            <article class="flexbox vcenter">
                <span><img src="images/SN_InteractiveDev.png"></span>
            </article>
        </slide>

        <slide class="title-slide segue nobackground">
            <aside class="gdbar"><img src="images/SN_InteractiveDev_logo.png"></aside>
            <hgroup class="auto-fadein">
                <h1>{{{presentation.title}}}</h1>
                <h2>{{{presentation.subtitle}}}</h2>
                <p>{{{presentation.presenter}}}{{#if presentation.position}}<br><em>{{{presentation.position}}}</em>{{/if}}</p>
            </hgroup>
        </slide>

        {{#each slides}}
        <slide class="{{#if class}}{{class}}{{/if}}{{#if background}} nobackground{{/if}}" {{#if background}}style="background:url('{{background}}');"{{/if}}>
            {{md content}}
        </slide>
        {{/each}}

        <slide class="backdrop"></slide>

    </slides>

